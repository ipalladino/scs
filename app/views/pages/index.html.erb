<div class="container">
  <div class="row">
    <div class="col-lg-12" >

			<h1>Listing pages</h1>

			<%= link_to 'New Page', new_page_path, class: "btn btn-default" %>
			<br><br>

			<table class="table table-striped table-bordered">
			  <thead>
			    <tr>
			      <th>Title</th>
			      <th>Description</th>
						<th>URL</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @pages.each do |page| %>
			      <tr>
			        <td><%= page.title %></td>
			        <td><%= page.description %></td>
							<td><%= page.url %></td>
			        <td><%= link_to 'Edit Content', page %></td>
			        <td><%= link_to 'Edit Metadata', edit_page_path(page) %></td>
			        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>

			<br>

			<%= link_to 'New Page', new_page_path, class: "btn btn-default" %>

    </div>
  </div>
</div>
