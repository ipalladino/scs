<section class="section-carousel-intro" style="background-color:<%= obj.background_color %>">
	<div id="carousel-intro" class="carousel slide" data-ride="carousel">
		<!-- Indicators -->
		<ol class="carousel-indicators">
			<% i = 0 %>
			<% obj.child_items.order("priority ASC").each do |item| %>
				<% if(i == 0) %>
					<li data-target="#carousel-intro" data-slide-to="<%= i %>" class="active"></li>
				<% else %>
					<li data-target="#carousel-intro" data-slide-to="<%= i %>"></li>
				<% end %>
				<% i = i+1 %>
			<% end %>
		</ol>
		<!-- Wrapper for slides -->
		<div class="carousel-inner" role="listbox">
			<% i = 0 %>
			<% obj.child_items.order("priority ASC").each do |item| %>
			<% if(i == 0) %>
				<div class="item active">
			<% else %>
				<div class="item">
			<% end %>
					<div class="container">
					  <div class="row">
					    <div class="col-lg-6" >
					      <h2><%= item.title %></h2>
								<p><%= item.description %></p>
								<% if(item.button_link != "#" && !item.button_link.empty?) %>
									<a href="<%= item.button_link %>" class="btn btn-default" role="button"><%= item.button_text %></a>
								<% end %>
					    </div>
							<div class="col-lg-6 icon-wrapper">
								<img src="<%= item.graphic %>" />
							</div>
					  </div>
					</div>
				</div>
			<% i = i+1 %>
			<% end %>
		</div>

		<!-- Controls -->
		<a class="left carousel-control" href="#carousel-intro" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#carousel-intro" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
</section>
