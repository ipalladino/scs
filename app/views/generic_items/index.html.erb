<div class="container generic_items_list">
  <div class="row">
    <div class="col-lg-12" >
      <h1>Listing Generic Items</h1>

			<%= link_to 'New Generic item', new_generic_item_path, class: "btn btn-default" %>

			<br>
			<br>

			<table class="table table-striped table-bordered">
			  <thead>
			    <tr>
			      <th>ID</th>
						<th>Title</th>
			      <th>Description</th>
			      <th>Graphic</th>
			      <th>Button link</th>
			      <th>Button text</th>
						<th>Component</th>
						<th>Parent Item Id</th>
			      <th colspan="4"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @generic_items.each do |generic_item| %>
					<% if(!generic_item.parent_item_id) %>
			      <tr>
							<td><%= generic_item.id %></td>
			        <td><%= generic_item.title %></td>
			        <td><%= truncate(generic_item.description, :length => 50, :omission => "..." , :escape => false) %></td>
			        <td><%= generic_item.graphic %></td>
			        <td><%= generic_item.button_link %></td>
			        <td><%= generic_item.button_text %></td>
							<td><%= translate_component(generic_item.component) %></td>
							<td><%= generic_item.parent_item_id %></td>
							<td><%= link_to 'Preview', preview_generic_item_path(generic_item) %></td>
			        <td><%= link_to 'Show', generic_item %></td>
			        <td><%= link_to 'Edit', edit_generic_item_path(generic_item) %></td>
			        <td><%= link_to 'Destroy', generic_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
					<% end %>
			    <% end %>
			  </tbody>
			</table>

			<%= link_to 'New Generic item', new_generic_item_path, class: "btn btn-default" %>
      <br>
      <br>
    </div>
  </div>
</div>
